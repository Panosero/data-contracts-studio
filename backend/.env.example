# Backend Environment Configuration Template
# Copy this file to .env and customize for your environment

# Application Settings
# Set to True for development to enable API documentation (/docs, /redoc)
# Set to False for production to disable documentation endpoints
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
APP_NAME=Data Contracts Studio
APP_VERSION=1.0.0

# Database Configuration
# SQLite (Development)
DATABASE_URL=sqlite:///./data_contracts.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3333", "https://yourdomain.com"]

# Security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: If using external services
# REDIS_URL=redis://localhost:6379
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
